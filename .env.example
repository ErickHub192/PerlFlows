# PERFLOW Environment Configuration Example
# Copy this file to .env and fill in your real values

# LLM Configuration
LLM_API_KEY=your_openai_api_key_here
DEFAULT_LLM_MODEL=gpt-4.1
DEFAULT_EMBED_MODEL=text-embedding-ada-002
EMBED_DIMS=1536
OPENAI_CHAT_MODEL=gpt-4.1

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Security
SECRET_KEY=your_secret_key_here

# OAuth Configuration
OAUTH_CALLBACK_URL=https://your-domain.com/api/oauth/callback
OAUTH_REDIRECT_URL=https://your-domain.com/api/oauth/callback
OAUTH_SUCCESS_URL=https://your-domain.com/success

# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# HubSpot OAuth2 Configuration
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here

# Slack OAuth2 Configuration  
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here

# App Configuration
API_BASE_URL=https://your-domain.com
MCP_BASE_URL=http://localhost:5000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
SCHEDULER_REDIS_DB=1

# Cache Configuration
CAG_CONTEXT_CACHE_KEY=cag:context
NODES_CACHE_TTL=60
PLAN_CACHE_TTL=300
SEARCH_CACHE_TTL=60
CACHE_TTL_SECONDS=3600

# Performance Configuration
LLM_TIMEOUT=30
DB_MAX_CURRENT_QUERIES=20
MAX_CONCURRENT_REQUESTS=10
LLM_CIRCUIT_BREAKER_THRESHOLD=5
HTTPX_MAX_CONNECTIONS=100
HTTPX_MAX_KEEPALIVE=20
HTTPX_CONNECT_TIMEOUT=30.0
HTTPX_READ_TIMEOUT=120.0

# Feature Flags
CAG_ENABLED=true
MODE_TOKEN=your_mode_token_here

# Monitoring
OTEL_ENDPOINT=http://otel-collector:4318/v1/traces